<aura:component description="Gameize_GameAgeCounter">
    <form class="slds-form--inline">
        <div class="slds-form-element">
            <label class="slds-form-element__label" for="inputSample2">Please enter your age::</label>
            <div class="slds-form-element__control">
                <ui:inputText aura:id="age" class="slds-input" placeholder="Example: (november 1,1966)" value="" />
            </div>
        </div>
        <div class="slds-form-element">
            <button class="slds-button slds-button--brand" type="button" onclick="{!c.letsCount}">Let's Count</button>
        </div>
    </form>

    <div class="slds-form-element">
        <label class="slds-form-element__label" for="inputSample2">You are days old:</label>
        <div class="slds-form-element__control">
            <ui:outputText aura:id="daysOld" class="slds-input" value="" />
        </div>
    </div>
    <div class="slds-form-element">
        <label class="slds-form-element__label" for="inputSample2">Plus hours old:</label>
        <div class="slds-form-element__control">
            <ui:outputText aura:id="hoursOld" class="slds-input" value="" />
        </div>
    </div>
    <div class="slds-form-element">
        <label class="slds-form-element__label" for="inputSample2">Plus minutes old:</label>
        <div class="slds-form-element__control">
            <ui:outputText aura:id="minutesOld" class="slds-input" value="" />
        </div>
    </div>
</aura:component>